<Page x:Class="Game.Page.PageEnd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.Page"
      mc:Ignorable="d" 
      d:DesignHeight="775" d:DesignWidth="1487"
      Title="PageEnd">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/image/End.jpg" 
               Grid.ColumnSpan="2"
             Stretch="Fill"
               />
        <TextBlock
            Text="Конец "
            Grid.Column="0"
           TextWrapping="Wrap"
            Foreground="Wheat"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="130"
             FontFamily="Monotype Corsiva" Margin="20,50,0,515" 
            />
        <Button
           Grid.ColumnSpan="2"
            Opacity="0"
            Click="Button_Click"
   
            ></Button>

        <Image Source="/image/w512h5121380984637delete1.png" Margin="0,0,680,707" />
    </Grid>
</Page>
